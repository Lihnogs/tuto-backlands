{
  "name": "code-tutor-backend",
  "version": "1.0.0",
  "description": "Backend API para Code Tutor com Fastify e Neon PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.dev.json src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "create-env": "node ../scripts/create-env.js",
    "setup-db": "node ../scripts/setup-database.js",
    "test-db": "node ../scripts/test-db-connection.js",
    "test-auth": "node ../scripts/test-auth-service.js",
    "check-server": "node ../scripts/check-server-status.js",
    "debug-register": "node ../scripts/debug-register.js",
    "test-insert": "node ../scripts/test-user-insert.js",
    "check-table": "node ../scripts/check-table-structure.js",
    "fix-db": "node ../scripts/fix-database.js",
    "test-zod": "node ../scripts/test-zod-validation.js",
    "simple-test": "node ../scripts/simple-register-test.js",
    "test-all": "node ../scripts/test-all-endpoints.js",
    "test-chat": "node ../scripts/test-chat-only.js",
    "test-api": "node ../scripts/test-api.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@neondatabase/serverless": "^0.9.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^5.3.22",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "fastify",
    "neon",
    "postgresql",
    "api",
    "typescript"
  ],
  "author": "Code Tutor Team",
  "license": "MIT"
}
