{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,

    "strict": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**"
  ]
}
